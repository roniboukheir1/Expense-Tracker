@model Expense_Tracker.Models.Transaction

@{
    ViewData["Title"] = "Create Transaction";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="mt-5 mb-3">
        <ejs-datepicker id="datepicker" ejs-for="Date" format="yyyy-MM-dd"></ejs-datepicker>
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <ejs-dropdownlist id="ddlCategories" ejs-for="CategoryId" dataSource="@ViewBag.Categories" placeholder="Select a Category">
            <e-dropdownlist-fields text="TitleWithIcon" value="CategoryId"></e-dropdownlist-fields>
        </ejs-dropdownlist>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <ejs-numerictextbox id="currency" ejs-for="Amount" min="0" format="c0"></ejs-numerictextbox>
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <div class="control_wrapper TextArea-control-section">
            <ejs-textarea id="default" ejs-for="Note" placeholder="Enter Your Note" maxLength="50"></ejs-textarea>
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>
    </div>
        <input type="submit" value="Create" class="btn btn-success" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
